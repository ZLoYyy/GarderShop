@model GarderShop.Models.Product
<section class="shop single section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-lg-6 col-12">

                        <!-- Product Slider -->
                        <div class="product-gallery">
                            <!-- Images slider -->
                            <div id="slider" class="flexslider">
                                <ul class="slides">
                                    @{
                                        for (int i = 0; i < 5; i++)
                                        {
                                            if (i == 0)
                                            {
                                                <li class="flex-active-slide" style="width: 250px; float: none; display: block;" >
                                                    <img src="~/images/Products/@Model.Category.Name/@Model.Img" alt="#">
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="" style="width: 250px; float: none; display: block;">
                                                    <img src="~/images/Products/@Model.Category.Name/@Model.Img" alt="#">
                                                </li>
                                            }
                                        }
                                    }
                                </ul>
                            </div>
                            <div id="carousel" class="flexslider">
                                <ul class="slides">
                                    @{
                                        for (int i = 0; i < 5; i++)
                                        {
                                            if (i == 0)
                                            {
                                                <li class="flex-active-slide">
                                                    <img src="~/images/Products/@Model.Category.Name/@Model.Img" alt="#">
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="">
                                                    <img src="~/images/Products/@Model.Category.Name/@Model.Img" alt="#">
                                                </li>
                                            }
                                        }
                                    }
                                </ul>
                            </div>
                            
                        </div>
                        <!-- End Product slider -->
                    </div>
                    <div class="col-lg-6 col-12">
                        <div class="product-des">
                            <!-- Description -->
                            <div class="short">
                                <h4>@Model.Name</h4>
                                <div class="rating-main">
                                    <ul class="rating">
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star-half-o"></i></li>
                                        <li class="dark"><i class="fa fa-star-o"></i></li>
                                    </ul>
                                    <a href="./Eshop - eCommerce HTML5 Template._files/shop-single.html" class="total-review">(102) Review</a>
                                </div>
                                <p class="price"><span class="discount">@Model.Price</span><s>$80.00</s> </p>
                                <p class="description">@Model.ShortDesc</p>
                            </div>
